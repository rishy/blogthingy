@font-face
  src url('../fonts/UbuntuTitling-Bold.ttf')
  font-family 'ubuntu-bold'

@font-face
  src url('../fonts/Ubuntu-L.ttf')
  font-family 'ubuntu'

ul 
  list-style-type none
  padding 0px
  margin 0px

a:hover
  text-decoration none
  color #004152 !important

a
  color #333333

body
  font-family 'ubuntu-bold' !important  

#mainHead  
  font-size 100px
  background-color  #e7e7e7
  padding 5% 0%
  text-align center
  color #888
  text-shadow -2px 0px 0px #747474

/*--------sidebar styles-----------*/

#sidebar
  position relative
  top 20px
  width 300px
  padding 20px
  text-align center

#sidebar, #name
  font-size 17px

#name
  line-height 0.75
  background-color #888
  height 100px
  width 100px
  border-radius 100%
  padding-top 46px
  color #F1F1F1
  margin 5px auto  
  -webkit-transition-duration 0.3s
  -webkit-transition-timing-function: ease-in-out;

#name:hover
  border-radius 3px
  -webkit-transition-duration 0.3s
  -webkit-transition-timing-function: ease-in-out;  

#fries
  font-size 15px
  color #747474

#sidebar nav li:hover
  color #004152 !important

#sidebar #links li, #networks li
  display inline

.fixedMenu
  position fixed !important

/*----------SIDEBAR STYLES END-------------*/

#ondway
  text-align center
  font-size 40px
  line-height 2
  padding-top 20px
  
#wait  
  position relative  
  color #636262

#follow 
  display inline

#ondway div
  color #333
  font-size 35px

#follow img
  width 50px
  margin-left 10px

/*------------------------------------Profile Page-----------------------------------*/

#profileWrapper
  padding 20px 60px

#profileWrapper header  
  border-bottom 1px solid #DDDDDD
  padding 20px 0px
  width 100%
  display inline-block

#pic
  height 150px
  width 150px
  border-radius 5px
  background-color #777
  float left

#pic img
  height 100%
  width 100%
  border-radius 5px

#intro
  float left
  margin-left 75px
  

#intro p:first-child
  font-size 70px
  margin 0

#intro p:last-child
  font-size 25px
  color #777  
  font-family 'ubuntu'

#networks
  float right
  margin-top 120px

#networks li
  margin-left 10px

#details  
  font-size 20px
  padding 30px 60px 30px 60px
  font-family ubuntu
  text-align justify
  position relative

#back2home  
  height 75px
  width 75px
  margin 0 auto


#back2home img
  height 100%
  width 100%

/*---------------------------Media Queries-------------------------*/

@media (max-width: 1024px) and (min-width: 768px)

  #profileWrapper 
    padding 15px 40px 
    
  #profileWrapper header
    padding 15px 0px

  #pic
    height 125px
    width 125px
    border-radius 4px

  #pic img
    border-radius 4px

  #intro
    margin-left 40px
    line-height 1.6
    
  #intro p:first-child
    font-size 50px

  #intro p:last-child
    font-size 18px

  #networks
    margin-top 100px

  #networks li
    margin-left 3px

  #networks li img
    height 28px
    width 28px

  #details
    font-size 18px
    padding 20px 40px

  #back2home 
    height 60px
    width 60px

@media (max-width: 768px)

  #mainHead
    font-size 60px
    padding 30px

  #ondway
    font-size 25px

  #profileWrapper 
    padding 10px 20px 
    
  #profileWrapper header
    padding 10px 0px

  #pic
    height 100px
    width 100px
    border-radius 3px
    float none
    margin auto

  #pic img
    border-radius 3px

  #intro
    margin-left 30px
    line-height 1.4
    text-align center
    float none
    margin 0 auto
    
  #intro p:first-child
    font-size 30px

  #intro p:last-child
    font-size 15px

  #networks
    margin-top 0px
    float none
    display flex

  #networks ul
    margin 0 auto

  #networks li
    margin-left 2px

  #networks li img
    height 24px
    width 24px

  #details
    font-size 15px
    padding 15px 20px

  #back2home 
    height 45px
    width 45px