      span Web.log()

    div(id='sidebar' my-scroll-directive)
      div(id='name' ng-mouseenter="myCssVar='hoverActive'" ng-mouseleave="myCssVar=''")
        a(href='/#/profile') 
          p(ng-class='myCssVar') Rishabh Shukla
      p(id='fries') I like french fries and computers

      nav
        ul        
          li 
            a(href='/#/main') Stream

      div(class='networks')
        ul
          li 
            a(href='https://github.com/rishy' target='_blank')
              img(src='images/github.png')
          li
            a(href='https://plus.google.com/+Rishabhshukla13/posts' target='_blank')
              img(src='images/twitter.png')
          li
            a(href='https://twitter.com/0_rishabh' target='_blank')
              img(src='images/gplus.png')

    
    section(id='wrapper')
      div.view-container  
        div(ng-view='' class='view-frame')
